{
  "ts-node": {
    "transpileOnly": false, //-- use 'false' for ts-node typechecking, use 'true' to skip typechecking --//
    "files": true,
    "compilerOptions": {
      //-- These compilerOptions are overrides only for ts-node - i.e. they won't apply to tsc --//
    }
  },
  "compilerOptions": {
    //-- Below is from: https://github.com/tsconfig/bases/blob/main/bases/node18.json --//
    "lib": ["ES2022"],
    // "module": "commonjs", //-- Default for node since it's not run in a browser --//
    "module": "ES2022", //-- Using to allow top-level await --//
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    //-- Below was added to extend the bases/node18.json compilerOptions --//
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["index.ts", "App/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
